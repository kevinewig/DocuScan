<Window x:Class="DocuScan.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="DocuScan File Comparison Tool" Height="600" Width="900">

    <Grid Margin="10">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Directory Inputs -->
        <StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <Label Content="Directory 1:" VerticalAlignment="Center"/>
                <TextBox x:Name="Dir1TextBox" Width="300" Margin="5"/>
                <Button x:Name="Dir1Button" Content="Browse..." Click="BrowseDir1_Click" Margin="5" Width="65"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="0,0,0,10">
                <Label Content="Directory 2:" VerticalAlignment="Center"/>
                <TextBox x:Name="Dir2TextBox" Width="300" Margin="5"/>
                <Button x:Name="Dir2Button" Content="Browse..." Click="BrowseDir2_Click" Margin="5" Width="65"/>
                <Button x:Name="CompareButton" Content="Compare" Click="Compare_Click" Margin="5" Height="22" Width="86"/>
            </StackPanel>
        </StackPanel>

        <!-- Results Section -->
        <GroupBox Grid.Row="2" Header="Results" Margin="0,10,0,0">
            <DockPanel>
                <Button x:Name="CopyAllToClipboard" 
                        Content="Copy to Clipboard" 
                        Click="CopyToClipboard_Click" 
                        Height="22" Width="134" 
                        DockPanel.Dock="Top" 
                        HorizontalAlignment="Right" 
                        Margin="0,0,0,5"/>

                <DataGrid x:Name="ResultsGrid" 
                          AutoGenerateColumns="False" 
                          CanUserAddRows="False" 
                          ClipboardCopyMode="IncludeHeader"
                          SelectionMode="Extended">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="File Name" Binding="{Binding FileName}" Width="*"/>
                        <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="150"/>
                        <DataGridTextColumn Header="Same" Binding="{Binding Same}" Width="50"/>
                    </DataGrid.Columns>
                </DataGrid>
            </DockPanel>
        </GroupBox>

        <!-- Progress Section -->
        <GroupBox Grid.Row="3" Header="Progress" Margin="0,10,0,0">
            <Grid Width="720" Height="20" Margin="5">
                <ProgressBar x:Name="CompareProgressBar" Minimum="0" Maximum="100" Margin="-60,0,-60,0" />
                <TextBlock x:Name="ProgressText" 
                           Text="" 
                           HorizontalAlignment="Center" 
                           VerticalAlignment="Center" 
                           Foreground="Black" 
                           FontWeight="Bold"/>
            </Grid>
        </GroupBox>

    </Grid>
</Window>
