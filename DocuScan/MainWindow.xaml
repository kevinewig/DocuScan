<Window x:Class="DocuScan.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="DocuScan File Comparison Tool" Height="600" Width="900">
    
    <Grid Margin="10">
        
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Directory Inputs -->
        <StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <Label Content="Directory 1:" VerticalAlignment="Center"/>
                <TextBox x:Name="Dir1TextBox" Width="300" Margin="5"/>
                <Button x:Name="Dir1Button" Content="Browse..." Click="BrowseDir1_Click" Margin="5" Width="65"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="0,0,0,10">
                <Label Content="Directory 2:" VerticalAlignment="Center"/>
                <TextBox x:Name="Dir2TextBox" Width="300" Margin="5"/>
                <Button x:Name="Dir2Button" Content="Browse..." Click="BrowseDir2_Click" Margin="5" Width="65"/>
                <Button x:Name="CompareButton" Content="Compare" Click="Compare_Click" Height="22" Width="86"/>
            </StackPanel>

        </StackPanel>


        <DataGrid x:Name="ResultsGrid" Grid.Row="2" AutoGenerateColumns="False" CanUserAddRows="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="File Name" Binding="{Binding FileName}" Width="*"/>
                <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="150"/>
                <DataGridTextColumn Header="Same" Binding="{Binding Same}" Width="50"/>
            </DataGrid.Columns>
        </DataGrid>

        <Border Grid.Row="3" Margin="0,10,0,0" BorderBrush="Gray" BorderThickness="1" CornerRadius="4" Padding="5">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                <Grid Width="750" Height="20" Margin="5">
                    <ProgressBar x:Name="CompareProgressBar" Minimum="0" Maximum="100" Margin="0,0,-93,0" />
                    <TextBlock x:Name="ProgressText" Text="" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="Black" FontWeight="Bold"/>
                </Grid>
            </StackPanel>
        </Border>

    </Grid>
</Window>
